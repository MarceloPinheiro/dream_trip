<h1>Participantes</h1>
<br>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>nome</th>
          <th>email</th>
          <th>votos</th>
        </tr>
      </thead>
      <tbody>
        <%@participants.each do |participant|%>
          <tr>
            <td><%=participant.id%></td>
            <td><%=participant.name%></td>
            <td><%=participant.email%></td>
            <td>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Destino</th>
                    <th>Votos</th>
                  </tr>
                </thead>
                <tbody>
                  <%Destination.votes(participant.id).each do |destination|%>
                    <tr>
                      <td><%=destination.place%></td>
                      <td><%=destination.votos%></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
